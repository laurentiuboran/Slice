<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="286dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/slice_black" />

    <ImageView
        android:id="@+id/il"
        android:layout_width="205dp"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:src="@drawable/kitchen_utensils" />


    <Button
        android:id="@+id/buton_retetar"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/logo"
        android:layout_marginTop="127dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorAccent"
        android:onClick="clickRetetar"
        android:text="ReÈ›etar"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buton_joc"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/buton_forum"
        android:layout_alignTop="@+id/buton_chestionar"
        android:layout_weight="1"
        android:backgroundTint="@color/colorAccent"
        android:text="Joc"
        android:onClick="clickJoc"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buton_forum"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignTop="@+id/buton_retetar"
        android:layout_weight="1"
        android:backgroundTint="@color/colorAccent"
        android:text="Chat"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="clickChat"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buton_chestionar"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignStart="@+id/logo"
        android:layout_below="@+id/buton_retetar"
        android:layout_weight="1"
        android:backgroundTint="@color/colorAccent"
        android:text="Chestionar"
        android:onClick="clickChestionar"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:clickable="true"
        android:onClick="clickMail"
        app:srcCompat="@drawable/baseline_local_post_office_black_18dp" />

</RelativeLayout>